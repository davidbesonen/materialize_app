.row 
  .col-sm-12 
    .card 
      .card-header 
        %h1= "Conditions"
        %a
          = link_to "Add Condition", new_condition_path(), class: "waves-effect waves-light btn"
.row 
  .col-sm-12 
    .card 
      .card-body
        %table
          %thead
            %tr
              %th Name
              %th Condition Group
              %th Actions
          %tbody
            -@conditions.each do |c|
              %tr
                %td 
                  = c.name
                %td
                  = c.condition_group.name
                %td.text-center
                  .btn-group 
                    = link_to "Delete", condition_path(c), method: :delete, class: "waves-effect waves-light btn"
                    = link_to "Edit", edit_condition_path(c), class: "waves-effect waves-light btn"
