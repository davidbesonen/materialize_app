.row 
  .col-sm-12 
    .card 
      .card-header 
        %h1= "Add Condition"
      .card-body 
        = simple_form_for @condition do |f|
          = f.input :name
          = f.submit "Add Condition", class: "waves-effect waves-light btn"
          = link_to "Back", condition_groups_path, class: "waves-effect waves-light btn"
