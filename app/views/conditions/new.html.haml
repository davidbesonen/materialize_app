.row 
  .col.s12
    %h1= "Add Condition"
    = simple_form_for @condition do |f|
      = f.input :name
      = f.association :condition_group, collection: ConditionGroup.all, label: "Group", input_html: {class: "browser-default" }
      = f.submit "Add Condition", class: "waves-effect waves-light btn"
      = link_to "Back", conditions_path, class: "waves-effect waves-light btn"
